{% extends 'base.html.twig' %}
{# {% form_theme loginForm 'bootstrap_5_layout.html.twig' %} #}
{% block body %}
    <h1>Connexion</h1>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path('login')}}" method="post">
        <div class="mb-3">
            <input type="text" class="form-control" required name="_username" placeholder="adresse email" value="{{ last_username }}">
        </div>
        <div class="mb-3">
            <input type="password" class="form-control" required name="_password" placeholder="mot de passe">
        </div>
        <input type="hidden" name="_target_path" value="{{ referer }}"/>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="mb-3">
            <button type="submit" class="btn btn-success">Connexion</button>
        </div>
    </form>
{% endblock %}